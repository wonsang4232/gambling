<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>실시간 채팅</title>
  <script src="/socket.io/socket.io.js"></script>
  <!-- <script src="/js/Chatroom.js"></script> -->
  <script src="/js/Chat.js"></script>
  <style>
    body {
      font-family: Arial, sans-serif;
      display: flex;
      flex-direction: column;
      height: 100vh;
      margin: 0;
    }

    main {
      display: flex;
      flex-grow: 1;
    }

    #chatMembers {
      flex-basis: 20%;
      padding: 20px;
      box-sizing: border-box;
      background-color: #f2f2f2;
      overflow-y: auto;
    }

    #chatMembers h2 {
      margin-bottom: 10px;
    }

    #chatMessages {
      flex-grow: 1;
      padding: 20px;
      box-sizing: border-box;
      background-color: #e6e6e6;
      overflow-y: auto;
    }

    #chatMessages h2 {
      margin-bottom: 10px;
    }

    #messageInput {
      flex-basis: 20%;
      padding: 20px;
      box-sizing: border-box;
      background-color: #f2f2f2;
    }

    #messageInput h2 {
      margin-bottom: 10px;
    }

    #messageInput textarea {
      width: 100%;
      height: 60px;
      padding: 8px;
      font-size: 14px;
      resize: none;
    }

    #messageInput button {
      margin-top: 10px;
      padding: 10px;
      font-size: 16px;
    }

    #bottomSection {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px;
      box-sizing: border-box;
      background-color: #505050;
    }

    #bottomSection button {
      padding: 10px;
      font-size: 14px;
    }
  </style>
</head>
<body>

  <main>
    <div id="chatMembers">
      <h2>채팅방 멤버</h2>
      <!-- 멤버 목록을 동적으로 추가할 수 있습니다. -->
      <ul id="memberList"></ul>
    </div>

    <div id="chatMessages">
      <h2>채팅 메시지</h2>
      <!-- 채팅 메시지를 동적으로 추가할 수 있습니다. -->
      <ul id="messageList"></ul>
    </div>

    <div id="messageInput">
      <h2>메시지 입력</h2>
      <textarea id="messageTextArea" placeholder="메시지를 입력하세요"></textarea>
      <button onclick="sendMessage()">전송</button>
    </div>
  </main>

  <div id="bottomSection">
    <div>
      <strong style="color: white;">Roomcode : <span id="chatRoomNumber">123456</span></strong>
    </div>
    <button onclick="leaveChatRoom()">Leave Room</button>
  </div>

  <script>
    function sendMessage() {
      // 여기에 메시지 전송 로직을 추가하십시오.
      const message = document.getElementById('messageTextArea').value;
      console.log('Message sent:', message);

      // 메시지를 전송한 후 입력창 초기화
      document.getElementById('messageTextArea').value = '';
    }

    function leaveChatRoom() {
      // 여기에 채팅방 나가기 로직을 추가하십시오.
      console.log('Left the chat room');
    }
  </script>

</body>
</html>
